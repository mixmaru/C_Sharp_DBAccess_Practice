<UserControl x:Class="カスタムコントロール.PART_NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:カスタムコントロール"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <RepeatButton Content="Up" Grid.Column="1" Margin="2.5" Click="RepeatButton_Click" />
        <RepeatButton Content="Down" Grid.Column="1" Grid.Row="1" Margin="2.5" Click="RepeatButton_Click_1" />
        <TextBlock Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:PART_NumericUpDown}}}" x:Name="textBlockValue" Grid.RowSpan="2" TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" Foreground="Black"/>
    </Grid>
</UserControl>
